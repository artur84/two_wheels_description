<?xml version="1.0"?>
<robot name="2wheels" xmlns:xacro="http://www.ros.org/wiki/xacro">
  
  <!-- Chassis link -->
  <link name="link_chassis">
    <!-- pose and inertial -->
    <pose>0 0 0 0 0 0</pose>
    <inertial>
      <mass value="10.0"/>
      <origin rpy="0 0 0" xyz="0.01 0 0.03"/>
      <inertia ixx="0.007" ixy="0" ixz="0" iyy="0.00547" iyz="0" izz="0.012023"/>
    </inertial>
    <!-- body -->
    <collision name="collision_chassis">
      <origin rpy=" 0 0 0" xyz="0.01 0 0.03"/>
      <geometry>
        <box size="0.18 0.2 0.06"/> <!-- ancho, largo, alto -->
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0.0" xyz="0.0 0 0.0"/>
      <geometry>
        <mesh filename="package://two_wheels_description/meshes/robotmodel.dae"/>
      </geometry>
      <material name="blue"/> <!-- This is only for Rviz visualization -->
    </visual>
  </link>
  
  <!-- caster joint -->
  <joint name="joint_caster" type="continuous">
    <origin rpy="0 0 0" xyz="0.008 0.085 -0.015"/>
    <child link="caster_wheel"/>
    <parent link="link_chassis"/>
    <axis rpy="0 0 0" xyz="0 0 1"/>
    <limit effort="1000" velocity="100"/>
    <joint_properties damping="0.0" friction="0.0"/>
  </joint>

  
  <!-- caster front link -->
  <link name="caster_wheel">
    <inertial>
      <mass value="0.05"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0.000001" ixy="0" ixz="0" iyy="0.000001" iyz="0" izz="0.000001"/>
    </inertial>
    <collision name="caster_front_collision">
      <origin rpy=" 0 0 0" xyz="0.0 0 0"/>
      <geometry>
        <sphere radius="0.01"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>0</mu>
            <mu2>0</mu2>
            <slip1>0.0</slip1>
            <slip2>0.0</slip2>
          </ode>
        </friction>
      </surface>
    </collision>
    <visual name="caster_front_visual">
      <origin rpy=" 0 0 0" xyz="0.0 0 0"/>
      <geometry>
        <sphere radius="0.0095"/>
      </geometry>
    </visual>
  </link>
  <gazebo reference="caster_wheel">
    <mu1 value="0.0"/>
    <mu2 value="0.0"/>
    <kp value="10000000.0"/>
    <kd value="1.0"/>
    <fdir1 value="0 0 0"/>
    <material>Gazebo/Grey</material>
    <turnGravityOff>false</turnGravityOff>
  </gazebo>
  
  



  
  
  
  <!-- XXXXXXXXXXX -->
  <!-- Right wheel -->
  <!-- XXXXXXXXXXX -->
  <!-- Joint between right wheel and chassis -->
  <joint name="joint_right_wheel" type="continuous">
    <origin rpy="0 1.570 0" xyz="0.11 -0.057 0.012"/>
    <child link="link_right_wheel"/>
    <parent link="link_chassis"/>
    <axis rpy="0 0 0" xyz="0 0 -1"/>
    <limit effort="1000" velocity="100"/>
    <joint_properties damping="0.01" friction="0.01"/>
  </joint>
  <!-- right link -->
  <link name="link_right_wheel">
    <inertial>
      <mass value="0.1"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0.000016458" ixy="0" ixz="0" iyy="0.000016458" iyz="0" izz="0.000016458"/>
    </inertial>
     <surface>
        <friction>
          <ode>
            <mu>0.01</mu>
            <mu2>0.01</mu2>
          </ode>
        </friction>
      </surface>
    <collision name="link_right_wheel_collision">
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.01" radius="0.025"/>
      </geometry>
    </collision>
    <visual name="link_right_wheel_visual">
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.001" radius="0.001"/>
      </geometry>
    </visual>
  </link>

   
  <!-- XXXXXXXXXXX -->
  <!-- LEFT wheel -->
  <!-- XXXXXXXXXXX -->
   <!-- Joint between LEFT wheel and chassis -->
  <joint name="joint_left_wheel" type="continuous">
        <!-- Previous  xyz="-0.095 -0.055 0.01 -->
        <origin rpy="0 -1.570 0" xyz="-0.11 -0.057 0.012"/> <!-- PAY ATTENTION NEGATIVE 'y' -->
        <child link="link_left_wheel"/>
        <parent link="link_chassis"/>
        <axis rpy="0 0 0" xyz="0 0 1"/>
        <limit effort="1000" velocity="100"/>
        <joint_properties damping="0.01" friction="0.01"/>
  </joint>
  <!-- left link -->
  <link name="link_left_wheel">
        <inertial>
          <mass value="0.1"/>
          <origin rpy="0 0 0" xyz="0 0 0"/>
          <inertia ixx="0.000016458" ixy="0" ixz="0" iyy="0.000016458" iyz="0" izz="0.000016458"/>
        </inertial>
         <surface>
        <friction>
          <ode>
            <mu>0.01</mu>
            <mu2>0.01</mu2>
          </ode>
        </friction>
      </surface>
        <collision name="link_left_wheel_collision">
          <origin rpy="0 0 0" xyz="0 0 0"/>
          <geometry>
            <cylinder length="0.01" radius="0.025"/>
          </geometry>
        </collision>
        <visual name="link_left_wheel_visual">
          <origin rpy="0 0 0" xyz="0 0 0"/>
          <geometry>
            <cylinder length="0.001" radius="0.001"/>
          </geometry>
        </visual>
  </link>

  
 


  <!-- laser link -->
  <link name="sensor_laser">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="0.25" />
      <inertia ixx="0.000208333" ixy="0" ixz="0" iyy="0.000208333" iyz="0" izz="0.0003125"/>
    </inertial>
    
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.05" length="0.05"/>
      </geometry>
      <material name="white" />
    </visual>
    
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.05"/>
      </geometry>
    </collision>
  </link>

  <!-- joint to attach the laser to the chassis -->
  <joint name="joint_sensor_laser" type="fixed">
    <origin xyz="0.0 0 0.07" rpy="0 0 0"/>
    <parent link="link_chassis"/>
    <child link="sensor_laser"/>
  </joint>

  <!-- Plugin for the wheels -->
  <gazebo>
    <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">
      <legacyMode>true</legacyMode> 
      <alwaysOn>true</alwaysOn>
      <updateRate>100</updateRate>
      <leftJoint>joint_right_wheel</leftJoint>
      <rightJoint>joint_left_wheel</rightJoint>
      <wheelSeparation>0.22</wheelSeparation>
      <wheelDiameter>0.025</wheelDiameter>
      <torque>4000</torque>
      <commandTopic>cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <robotBaseFrame>link_chassis</robotBaseFrame>
    </plugin>
  </gazebo>

    <!-- plugin for the laser -->
   <gazebo reference="sensor_laser">
    <sensor type="ray" name="head_hokuyo_sensor">
      <pose>0 0 0 0 0 0</pose>
      <visualize>false</visualize>
      <update_rate>20</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>720</samples>
            <resolution>1</resolution>
            <min_angle>-1.570796</min_angle>
            <max_angle>1.570796</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.10</min>
          <max>10.0</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_laser.so">
        <topicName>/m2wr/laser/scan</topicName>
        <frameName>sensor_laser</frameName>
      </plugin>
    </sensor>
  </gazebo>


  <!-- XXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
  Simulation of a camera:
  XXXXXXXXXXXXXXXXXXXXXXXXXXXXX-->
  <joint name="camera_joint" type="fixed">
    <axis xyz="0 0 0" />
    <origin xyz="0.0 0.11 0.02" rpy="0 0 1.5708"/>
    <parent link="link_chassis"/>
    <child link="camera_link"/>
  </joint>
 <!-- Camera -->
  <link name="camera_link">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
    <box size="0.03 0.05 0.03"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
    <box size="0.03 0.05 0.03"/>
      </geometry>
      <material name="Black_1">
       <color rgba="0.0 0.0 0.0 1.0"/>
     </material>
    </visual>

    <inertial>
      <mass value="0.001" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.000001" ixy="0" ixz="0" iyy="0.000001" iyz="0" izz="0.000001" />
    </inertial>
  </link>
  <!-- Plugin for the camera -->
   <gazebo reference="camera_link">
    <sensor type="camera" name="camera1">
      <update_rate>30.0</update_rate>
      <camera name="camera1">
        <horizontal_fov>1</horizontal_fov>
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.02</near>
          <far>300</far>
        </clip>
        <noise>
          <type>gaussian</type>
          <!-- Noise is sampled independently per pixel on each frame.
               That pixel's noise value is added to each of its color
               channels, which at that point lie in the range [0,1]. -->
          <mean>0.0</mean>
          <stddev>0.007</stddev>
        </noise>
      </camera>
      <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
        <alwaysOn>true</alwaysOn>
        <updateRate>0.0</updateRate>
        <cameraName>rrbot/camera1</cameraName>
        <imageTopicName>image_raw</imageTopicName>
        <cameraInfoTopicName>camera_info</cameraInfoTopicName>
        <frameName>camera_link</frameName>
        <hackBaseline>0.07</hackBaseline>
        <distortionK1>0.0</distortionK1>
        <distortionK2>0.0</distortionK2>
        <distortionK3>0.0</distortionK3>
        <distortionT1>0.0</distortionT1>
        <distortionT2>0.0</distortionT2>
      </plugin>
    </sensor>
  </gazebo>

<!-- ros_control Gazebo plugin -->
  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/two_wheels_robot</robotNamespace>
      <robotSimType>gazebo_ros_control/DefaultRobotHWSim</robotSimType>
    </plugin>
  </gazebo>

    
</robot>
